<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="ToolBar" parent="AppTheme">
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="SplashHeader" parent="AppTheme">
        <item name="android:textColor">@color/mcWhite</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="SplashLink" parent="AppTheme">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">24sp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style  name="AboutText" parent="AppTheme">
        <item name="android:textColor">@color/mcBlack87</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Divider" parent="AppTheme">
        <item name="android:background">@color/mcBlack12</item>
    </style>

</resources>
